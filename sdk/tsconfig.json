{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@tests/*": ["tests/*"]
    }
  },
  "files": [
    "src/index.ts",
    "src/utils/state.ts",
    "src/utils/buffer.ts",
    "src/utils/redactor.ts",
    "src/utils/hash.ts",
    "src/utils/types.ts",
    "src/utils/otel.ts",
    "src/utils/flush-worker.ts"
  ],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
