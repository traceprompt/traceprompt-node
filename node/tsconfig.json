{
  "compilerOptions": {
    /* === Projects & output === */
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,

    /* === Language === */
    "target": "es2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2022", "dom"],

    /* === Strictness === */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,

    /* === Lint-assist === */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* === Source-maps === */
    "sourceMap": true,
    "inlineSources": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "tests"]
}
